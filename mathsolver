        <!-- SIDEBAR: HISTORY & HELP -->
        <div class="space-y-6">
            <div class="glass-card rounded-3xl p-6 shadow-sm">
                <h3 class="text-sm font-bold uppercase tracking-widest opacity-40 mb-4">Calculation History</h3>
