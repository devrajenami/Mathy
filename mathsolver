    <script>
        // --- THEME LOGIC ---
        function toggleTheme() {
            document.body.classList.toggle('dark');
            localStorage.setItem('mathy-theme', document.body.classList.contains('dark') ? 'dark' : 'light');
        }

        // Initialize Theme
        if (localStorage.getItem('mathy-theme') === 'dark') {
            document.body.classList.add('dark');
        }

        // --- NAVIGATION ---
        function switchTab(tabId) {
            const tabs = ['calc', 'unit', 'solve', 'tools'];
            tabs.forEach(t => {
                document.getElementById(`view-${t}`).classList.add('hidden');
                const tabBtn = document.getElementById(`tab-${t}`);
                if (tabBtn) {
                    tabBtn.classList.remove('tab-active');
                    tabBtn.classList.add('opacity-60');
                }
            });
            document.getElementById(`view-${tabId}`).classList.remove('hidden');
            const activeBtn = document.getElementById(`tab-${tabId}`);
            if (activeBtn) {
                activeBtn.classList.add('tab-active');
                activeBtn.classList.remove('opacity-60');
            }
        }

        // --- CALCULATOR LOGIC ---
        let currentInput = '0';
        let previousInput = '';
        let operation = null;
        let shouldResetDisplay = false;
        let history = [];

        const display = document.getElementById('current-op');
        const prevDisplay = document.getElementById('prev-op');
        const historyList = document.getElementById('calc-history');

        function updateDisplay() {
            display.innerText = currentInput;
            prevDisplay.innerText = previousInput;
        }

        function appendNum(num) {
            if (currentInput === '0' || shouldResetDisplay) {
                currentInput = num;
                shouldResetDisplay = false;
            } else {
                if (num === '.' && currentInput.includes('.')) return;
                currentInput += num;
            }
            updateDisplay();
        }

        function clearCalc() {
            currentInput = '0';
            previousInput = '';
            operation = null;
            updateDisplay();
        }

        function deleteLast() {
            if (shouldResetDisplay) return;
            currentInput = currentInput.length === 1 ? '0' : currentInput.slice(0, -1);
            updateDisplay();
        }

        function appendOp(op) {
            if (operation !== null && !shouldResetDisplay) calculate();
            previousInput = currentInput + ' ' + op;
            operation = op;
            shouldResetDisplay = true;
            updateDisplay();
        }

        function calculate() {
            if (operation === null || shouldResetDisplay) return;
            
            let result;
            const prev = parseFloat(previousInput);
            const current = parseFloat(currentInput);

            switch (operation) {
                case '+': result = prev + current; break;
                case '-': result = prev - current; break;
                case '*': result = prev * current; break;
                case '/': result = current === 0 ? 'Error' : prev / current; break;
                default: return;
            }

            addToHistory(`${previousInput} ${currentInput} = ${result}`);
            currentInput = result.toString();
            operation = null;
            previousInput = '';
            shouldResetDisplay = true;
            updateDisplay();
        }

        function addToHistory(item) {
            history.unshift(item);
            if (history.length > 10) history.pop();
            renderHistory();
        }

        function renderHistory() {
            if (history.length === 0) {
                historyList.innerHTML = '<p class="text-sm opacity-50 italic">No recent activity</p>';
                return;
            }
            historyList.innerHTML = history.map(h => `
                <div class="text-xs font-medium p-2 rounded-xl bg-slate-50 dark:bg-slate-800/50 border border-slate-100 dark:border-slate-800">
                    ${h}
                </div>
            `).join('');
        }

        function clearHistory() {
            history = [];
            renderHistory();
        }

        // --- UNIT CONVERTER ---
        const units = {
            length: { m: 1, km: 1000, cm: 0.01, inch: 0.0254, ft: 0.3048, mile: 1609.34 },
            weight: { kg: 1, g: 0.001, lbs: 0.453592, oz: 0.0283495 },
            temp: { c: 'c', f: 'f', k: 'k' }
        };

        function updateUnitOptions() {
            const cat = document.getElementById('unit-category').value;
            const from = document.getElementById('unit-from');
            const to = document.getElementById('unit-to');
            from.innerHTML = ''; to.innerHTML = '';

            Object.keys(units[cat]).forEach(u => {
                from.add(new Option(u.toUpperCase(), u));
                to.add(new Option(u.toUpperCase(), u));
            });
            
            if (cat === 'length') to.value = 'km';
            else if (cat === 'weight') to.value = 'lbs';
            else to.value = 'f';
            doConversion();
        }

        function doConversion() {
            const cat = document.getElementById('unit-category').value;
            const val = parseFloat(document.getElementById('unit-input').value) || 0;
            const from = document.getElementById('unit-from').value;
            const to = document.getElementById('unit-to').value;
            let result = 0;

            if (cat === 'temp') {
                let tempInC = from === 'c' ? val : (from === 'f' ? (val - 32) * 5/9 : val - 273.15);
                result = to === 'c' ? tempInC : (to === 'f' ? (tempInC * 9/5) + 32 : tempInC + 273.15);
            } else {
                result = (val * units[cat][from]) / units[cat][to];
            }
            document.getElementById('unit-result').value = result.toLocaleString(undefined, { maximumFractionDigits: 4 });
        }

        // --- SOLVER ---
        function solveQuery() {
            let input = document.getElementById('solve-input').value.toLowerCase().trim();
            const outBox = document.getElementById('solve-output-container');
            const outText = document.getElementById('solve-output');
            if (!input) return;

            try {
                let result;
                if (input.includes('of')) {
                    const parts = input.split('of');
                    result = (parseFloat(parts[0]) / 100) * parseFloat(parts[1]);
                } else {
                    const clean = input.replace(/[^-()\d/*+.]/g, '');
                    result = Function('"use strict";return (' + clean + ')')();
                }
                outText.innerText = result.toLocaleString();
                outBox.classList.remove('hidden');
            } catch (e) {
                outText.innerText = "Error";
                outBox.classList.remove('hidden');
            }
        }

        // KEYBOARD SUPPORT
        window.addEventListener('keydown', (e) => {
            if (document.activeElement.tagName === 'INPUT') {
                if (e.key === 'Enter' && document.activeElement.id === 'solve-input') solveQuery();
                return;
            }
            if (e.key >= 0 && e.key <= 9) appendNum(e.key);
            if (e.key === '.') appendNum('.');
            if (e.key === '+') appendOp('+');
            if (e.key === '-') appendOp('-');
            if (e.key === '*') appendOp('*');
            if (e.key === '/') appendOp('/');
            if (e.key === 'Enter') calculate();
            if (e.key === 'Backspace') deleteLast();
            if (e.key === 'Escape') clearCalc();
        });

        window.onload = () => updateUnitOptions();
    </script>
</body>
</html>
