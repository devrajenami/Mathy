                        <div id="prev-op" class="text-sm opacity-50 h-6 mb-1 overflow-hidden"></div>
                        <div id="current-op" class="text-5xl font-light truncate">0</div>
                    </div>
                    
                    <div class="grid grid-cols-4 gap-4">
                        <button onclick="clearCalc()" class="btn-math p-5 rounded-2xl bg-red-50 dark:bg-red-900/20 text-red-500 font-bold">AC</button>
                        <button onclick="deleteLast()" class="btn-math p-5 rounded-2xl bg-slate-100 dark:bg-slate-800 text-slate-500"><i class="fas fa-backspace"></i></button>
                        <button onclick="appendOp('/')" class="btn-math p-5 rounded-2xl bg-indigo-50 dark:bg-indigo-900/20 text-indigo-500 font-bold">÷</button>
                        <button onclick="appendOp('*')" class="btn-math p-5 rounded-2xl bg-indigo-50 dark:bg-indigo-900/20 text-indigo-500 font-bold">×</button>
                        
                        <button onclick="appendNum('7')" class="btn-math p-5 rounded-2xl bg-slate-50 dark:bg-slate-800/50 hover:bg-slate-100 dark:hover:bg-slate-700 font-medium">7</button>
                        <button onclick="appendNum('8')" class="btn-math p-5 rounded-2xl bg-slate-50 dark:bg-slate-800/50 hover:bg-slate-100 dark:hover:bg-slate-700 font-medium">8</button>
                        <button onclick="appendNum('9')" class="btn-math p-5 rounded-2xl bg-slate-50 dark:bg-slate-800/50 hover:bg-slate-100 dark:hover:bg-slate-700 font-medium">9</button>
                        <button onclick="appendOp('-')" class="btn-math p-5 rounded-2xl bg-indigo-50 dark:bg-indigo-900/20 text-indigo-500 font-bold">−</button>
                        
                        <button onclick="appendNum('4')" class="btn-math p-5 rounded-2xl bg-slate-50 dark:bg-slate-800/50 hover:bg-slate-100 dark:hover:bg-slate-700 font-medium">4</button>
                        <button onclick="appendNum('5')" class="btn-math p-5 rounded-2xl bg-slate-50 dark:bg-slate-800/50 hover:bg-slate-100 dark:hover:bg-slate-700 font-medium">5</button>
                        <button onclick="appendNum('6')" class="btn-math p-5 rounded-2xl bg-slate-50 dark:bg-slate-800/50 hover:bg-slate-100 dark:hover:bg-slate-700 font-medium">6</button>
                        <button onclick="appendOp('+')" class="btn-math p-5 rounded-2xl bg-indigo-50 dark:bg-indigo-900/20 text-indigo-500 font-bold">+</button>
                        
                        <button onclick="appendNum('1')" class="btn-math p-5 rounded-2xl bg-slate-50 dark:bg-slate-800/50 hover:bg-slate-100 dark:hover:bg-slate-700 font-medium">1</button>
                        <button onclick="appendNum('2')" class="btn-math p-5 rounded-2xl bg-slate-50 dark:bg-slate-800/50 hover:bg-slate-100 dark:hover:bg-slate-700 font-medium">2</button>
                        <button onclick="appendNum('3')" class="btn-math p-5 rounded-2xl bg-slate-50 dark:bg-slate-800/50 hover:bg-slate-100 dark:hover:bg-slate-700 font-medium">3</button>
                        <button onclick="calculate()" class="btn-math row-span-2 p-5 rounded-2xl bg-indigo-600 text-white font-bold text-2xl shadow-lg shadow-indigo-500/30">=</button>
                        
                        <button onclick="appendNum('0')" class="btn-math col-span-2 p-5 rounded-2xl bg-slate-50 dark:bg-slate-800/50 hover:bg-slate-100 dark:hover:bg-slate-700 font-medium">0</button>
                        <button onclick="appendNum('.')" class="btn-math p-5 rounded-2xl bg-slate-50 dark:bg-slate-800/50 hover:bg-slate-100 dark:hover:bg-slate-700 font-medium">.</button>
                    </div>
                </div>
            </section>

            <!-- SECTION 2: CONVERTER -->
            <section id="view-unit" class="hidden animate-in fade-in duration-300">
                <div class="glass-card rounded-3xl p-8 shadow-sm">
                    <h2 class="text-xl font-bold mb-6">Unit Converter</h2>
                    <div class="space-y-6">
                        <select id="unit-category" onchange="updateUnitOptions()" class="w-full p-4 bg-slate-50 dark:bg-slate-800 rounded-2xl border-none outline-none">
                            <option value="length">Length</option>
                            <option value="weight">Weight</option>
                            <option value="temp">Temperature</option>
                        </select>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div class="space-y-2">
                                <input type="number" id="unit-input" placeholder="0.00" oninput="doConversion()" class="w-full p-4 bg-slate-50 dark:bg-slate-800 rounded-2xl outline-none text-2xl font-semibold">
                                <select id="unit-from" onchange="doConversion()" class="w-full p-2 text-sm opacity-60 bg-transparent outline-none"></select>
                            </div>
                            <div class="space-y-2">
                                <input type="text" id="unit-result" readonly class="w-full p-4 bg-indigo-50 dark:bg-indigo-900/20 text-indigo-600 dark:text-indigo-400 rounded-2xl text-2xl font-semibold outline-none" value="0">
                                <select id="unit-to" onchange="doConversion()" class="w-full p-2 text-sm opacity-60 bg-transparent outline-none"></select>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- SECTION 3: SOLVER -->
