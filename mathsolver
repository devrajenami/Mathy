                        <input type="text" id="solve-input" placeholder="e.g., 20% of 1500" class="w-full p-5 bg-slate-50 dark:bg-slate-800 rounded-2xl outline-none focus:ring-2 ring-indigo-500/20">
                        <button onclick="solveQuery()" class="absolute right-3 top-3 bottom-3 px-6 bg-indigo-600 text-white rounded-xl">Solve</button>
                    </div>
                    <div id="solve-output-container" class="hidden p-6 bg-indigo-50 dark:bg-indigo-900/20 rounded-2xl">
                        <div class="text-xs uppercase font-bold tracking-wider opacity-40 mb-1">Result</div>
                        <div id="solve-output" class="text-3xl font-bold"></div>
                    </div>
                </div>
            </section>

            <!-- SECTION 4: QUICK TOOLS -->
            <section id="view-tools" class="hidden animate-in fade-in duration-300">
